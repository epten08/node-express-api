# Server
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
APP_NAME=Express API

# Database (PostgreSQL)
# Local development (without Docker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/express_api?schema=public"

# Docker PostgreSQL settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=express_api
DB_PORT=5432

# CORS (comma-separated for multiple origins, or * for all)
CORS_ORIGIN=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-key-at-least-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email (optional - for production)
# EMAIL_FROM=noreply@example.com
# EMAIL_API_KEY=your-email-api-key
