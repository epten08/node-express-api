# API runtime
PORT=3000
NODE_ENV=production
CORS_ORIGIN=https://your-frontend-domain.com

# Auth
JWT_SECRET=replace-with-a-random-32-char-minimum-secret
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Postgres container
DB_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=replace-with-strong-db-password
POSTGRES_DB=express_api

# Keep host as db if you use the Postgres container in docker-compose.vps.yml
DATABASE_URL=postgresql://postgres:replace-with-strong-db-password@db:5432/express_api?schema=public
